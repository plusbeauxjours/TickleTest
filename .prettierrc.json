{
  "useTabs": false,
  "tabWidth": 4,
  "singleQuote": true,
  "printWidth": 120,
  "trailingComma": "all",
  "endOfLine": "auto",
  "jsxBracketSameLine": true,
  "semi": true,
  "overrides": [
    {
      "files": [
        "*.yml",
        "*.yaml",
        "*.json",
        "*.md",
        ".prettierrc*",
        ".eslintrc*",
        ".babelrc*",
        "*.graphql",
        "*.gql"
      ],
      "options": {
        "tabWidth": 2,
        "printWidth": 80
      }
    }
  ]
}
